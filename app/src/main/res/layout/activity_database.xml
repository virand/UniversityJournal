<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.virand.universityjournal.DatabaseActivity">

    <EditText
        android:id="@+id/etDatabaseFullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Иванов Иван Иванович"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDatabaseBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:text="03.09.1995"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseFullname"
        tools:layout_editor_absoluteX="83dp" />

    <EditText
        android:id="@+id/etDatabaseAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Тюмень, Ленинский проспект д. 3/2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseBirthday" />

    <EditText
        android:id="@+id/etDatabaseTel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="+7 984 867 23 54"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseAddress" />

    <EditText
        android:id="@+id/etDatabaseEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ivan@yandex.ru"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseTel" />

    <EditText
        android:id="@+id/etDatabaseOlymps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Олимпиада по выч. технике\nВсерос. матем"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseEmail" />

    <EditText
        android:id="@+id/etDatabaseSport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Баскетбол 3 место\nУчастие в Универсиаде"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseOlymps" />

    <EditText
        android:id="@+id/etDatabaseNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Отдать копию паспорта"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseSport" />

    <Button
        android:id="@+id/btnDatabaseAdd"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Добавить"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnDatabaseRead"
        app:layout_constraintTop_toBottomOf="@+id/etDatabaseNotes" />

    <Button
        android:id="@+id/btnDatabaseRead"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:text="Считать всех (сист.)"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDatabaseAdd"
        app:layout_constraintLeft_toRightOf="@+id/btnDatabaseAdd"
        app:layout_constraintRight_toLeftOf="@+id/btnDatabaseClear" />

    <Button
        android:id="@+id/btnDatabaseClear"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Удалить всех"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDatabaseRead"
        app:layout_constraintLeft_toRightOf="@+id/btnDatabaseRead"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
